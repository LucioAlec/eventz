<section class="event-details">
	<div class="image">
		<%= image_tag(@event.image_file_name) %>
	</div>
	<div class="details">
		<h2><%= @event.name %></h2>
		<h3> <%= day_and_time(@event) %> in <%= @event.location %>: </h3>
		<span class='price'>
		<%=  pluralize(@event.capacity, "spot") %> &bull; <%=price(@event) %>
		</span>
			<p>
				<%= @event.description %>	
			</p>

			<div class="register">
			<%= register_or_sold_out(@event) %>
			<p>
			<%= link_to "Who's registered?", event_registrations_path(@event) %>
			</p>
			</div>
			<p>
				<%= @event.starts_at.strftime("%B %d at %I:%M %P") %>	
			</p>
	</div>
	</section>

	<section class="admin">
	<%= link_to "Edit", edit_event_path(@event), class: "button" %>
	<%= link_to "Delete", @event, class: "button", 
			data: { turbo_method: :delete, turbo_confirm: "Confirm Deleting Event?"} %>
	</section>
